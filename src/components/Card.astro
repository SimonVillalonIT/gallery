---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li class="link-card list-none border border-gray-600/40 rounded-3xl">
  <img class="w-full rounded-t-3xl" src={href} alt="Test" />
  <div class="p-3">
    <h2 class="text-2xl ">
      {title}
    </h2>
    <h4 class="text-white/40">John Doe</h4>
  </div>
</li>
